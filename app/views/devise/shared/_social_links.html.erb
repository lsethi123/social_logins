
<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>

  	<%-if provider.to_s  !="twitter"
  		social_media = provider.to_s.split('_')[0]
  		social_media = "google-plus" if social_media =="google"%>
  	 <div class="col-xs-4 col-sm-2">
    	<%= link_to "<i class='fa fa-#{social_media}'></i>#{social_media.split('-')[0].titleize}".html_safe, omniauth_authorize_path(resource_name, provider),class:"btn btn-block btn-social btn-#{social_media}" %>
    </div>

    <%-end-%>
  <% end -%>
<% end -%>
<%= render "devise/shared/ken_burn" %>
