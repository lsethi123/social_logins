
<div class="container">
	<div class="omb_login">
		<h3 class="omb_authTitle">Login or
			<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
			<%= link_to "Sign up", new_registration_path(resource_name) %><br />
			<% end -%>
		</h3>
		<div class="row omb_row-sm-offset-3 omb_socialButtons">
			<%= render "devise/shared/social_links" %>
		</div>

		<div class="row omb_row-sm-offset-3 omb_loginOr">
			<div class="col-xs-12 col-sm-6">
				<hr class="omb_hrOr">
				<span class="omb_spanOr">or</span>
			</div>
		</div>

		<div class="row omb_row-sm-offset-3">
			<div class="col-xs-12 col-sm-6">
				<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
				<div class="input-group">
					<span class="input-group-addon"><i class="fa fa-user"></i></span>
					<%= f.text_field :email, :placeholder => "Enter your Email",:autofocus => true, class: 'form-control' %>
				</div>
				<span class="help-block"></span>

				<div class="input-group">
					<span class="input-group-addon"><i class="fa fa-lock"></i></span>
					<%= f.password_field :password, :placeholder => "Enter your Password",class: 'form-control' %>
				</div>
				<span class="help-block"></span>

				<button class="btn btn-lg btn-primary btn-block" type="submit">Login</button>
				<%-end-%>
			</div>
		</div>
		<div class="row omb_row-sm-offset-3">
			<div class="col-xs-12 col-sm-3">
				<label class="checkbox">
					<input type="checkbox" value="remember-me">Remember Me
				</label>
			</div>
			<div class="col-xs-12 col-sm-3">
				<p class="omb_forgotPwd">
					<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
					<%= link_to "Forgot password?", new_password_path(resource_name) %>
					<% end -%>
				</p>
			</div>
		</div>
	</div>
</div>